{# Primary btn #}
{#
@params: {
  inner: string,

  class?: string,
  type?: string, - options 'button',
  attr?: data attributes
}
#}
{% macro primary(params) %}
  <button
    class="btn primary-btn {{ params.class }}"
    type='{{ params.type ? params.type : "button" }}'
    {{ params.attr }}
  >
    {{ params.inner }}
  </button>
{% endmacro %}
{# Primary btn end #}

